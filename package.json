{
  "name": "nodej_boilerplate",
  "version": "0.1.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel src -d dist --source-maps",
    "watch": "babel src -w -d dist --source-maps",
    "depcheck": "depcheck",
    "test-ci": "ENV_NAME=test jest --ci --reporters=jest-junit --outputFile=./test-results/jest",
    "start": "node dist/ports/http/bin/www",
    "test": "ENV_NAME=test jest",
    "lint": "eslint -c .eslintrc src/**/*.js",
    "stryker-mutate": "stryker run",
    "doc": "jsdoc -r .\\src\\ -d ./docs -c ./jsdoc.conf.json"
  },
  "license": "MIT",
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./test-results/jest",
    "outputName": "junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "engines": {
    "node": "^16.11.0",
    "yarn": "^1.20.0",
    "npm": "^6.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "yarn doc",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cuid": "^2.1.8",
    "debug": "^4.1.1",
    "escriba": "^2.5.0",
    "express": "^4.17.1",
    "log4js": "^5.1.0",
    "mariadb": "^2.5.4",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.21",
    "ramda": "^0.26.1",
    "sequelize": "^6.7.0",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.2.3",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@stryker-mutator/core": "^5.4.1",
    "@stryker-mutator/javascript-mutator": "^4.0.0",
    "@stryker-mutator/jest-runner": "^5.4.1",
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.4",
    "@types/ramda": "0.26.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^27.2.5",
    "commitlint": "^13.2.1",
    "depcheck": "^1.4.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-fp": "2.3.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsdoc": "^36.1.1",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^1.3.1",
    "jest": "^27.2.5",
    "jest-junit": "^13.0.0",
    "jsdoc": "^3.6.3",
    "lint-staged": "^8.1.0",
    "prettier-eslint": "^8.2.2",
    "rimraf": "^3.0.0",
    "standard": "^16.0.4"
  },
  "resolutions": {
    "handlebars": "^4.3.0",
    "eslint-utils": "^1.4.1",
    "lodash": "^4.17.15",
    "minimist": "^1.2.2",
    "dd-trace": "^0.14.0",
    "mkdirp": "^1.0.3",
    "typescript": ">=2.8.0",
    "debug": "^4.1.1",
    "yargs-parser": "^18.1.2",
    "bl": ">=4.0.3",
    "node-fetch": ">=2.6.1",
    "dot-prop": ">=4.2.1"
  }
}
